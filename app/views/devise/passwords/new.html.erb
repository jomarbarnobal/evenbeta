<main class="green">
	<div class="container sessions">
	<div class="btn-home center">
    <%= link_to root_path, class: 'center btn-floating btn-large waves-effect waves-light red' do%>
    <i class="material-icons">dashboard</i>
    <% end %>
  </div>
	<div class="card">
		<div class="card-content">
			<h3 class="center flow-text">Forgot your password?</h3>	
		</div>
				
		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		<div class="card-content">
			<%= devise_error_messages! %>	
		</div>
		  
	  <div class="card-action">
	  	<div class="input-field">
	      <%= f.email_field :email, autofocus: true %>
	      <%= f.label :email %>
		  </div>
		  

		  <div class="card-content center">
		    <%= f.submit "Send me reset password instructions", class: 'btn' %>
		  </div>	
	  </div>
		<% end %>
		<div class="card-action">
			<%= render "devise/shared/links" %>
		</div>
	</div>
</main>
<div class="footer"></div>
