<main class="green">
  <div class="container s12 m5 l4 sessions">
  <div class="btn-home center">
    <%= link_to root_path, class: 'center btn-floating btn-large waves-effect waves-light red' do%>
    <i class="fa fa-foursquare white-text"></i>
    <% end %>
  </div>
  
    <div class="card">
      <div class="card-content">
        <h3 class="center flow-text">Log in</h3>  
      </div>   
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="card-content">
      <%= render 'shared/flash_message' %>
      </div>

        <div class="card-action">
          <div class="input-field col s6">
            <%= f.email_field :email%>
            <%= f.label :"Email address" %>
          </div>

          <div class="input-field">
            <%= f.label :password, class: 'active'%>
            <%= f.password_field :password, autocomplete: "off", placeholder:'' %>
          </div>
          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>
          </div>
        
        <div class="card-content center">
          <%= f.submit "Log in", class: 'btn' %>  
        </div>
      <% end %>
         <div class="card-action">
          <%= render "devise/shared/links" %> 
        </div>
    </div>
  </div>
</main>

<footer></footer>
